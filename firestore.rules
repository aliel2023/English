rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ================================================================
    // HELPER FUNCTIONS
    // ================================================================
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuth() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isValidString(field, minLen, maxLen) {
      return field is string && field.size() >= minLen && field.size() <= maxLen;
    }

    function isValidEmail(email) {
      return email is string && email.matches('.*@.*\\..*');
    }

    // ================================================================
    // USERS COLLECTION
    // ================================================================
    match /users/{userId} {
      // Öz profilini oxuya bilər
      allow read: if isOwner(userId) || isAdmin();

      // Öz profilini yalnız icazə verilmiş sahələri yazabilər
      allow create: if isOwner(userId)
        && isValidString(request.resource.data.name, 2, 100)
        && isValidEmail(request.resource.data.email)
        && request.resource.data.role == 'user'          // admin heç vaxt create-də qura bilməz
        && request.resource.data.keys().hasAll(['name','email','level','role','createdAt']);

      allow update: if isOwner(userId)
        // role sahəsini dəyişdirə BİLMƏZ
        && (!('role' in request.resource.data) ||
             request.resource.data.role == resource.data.role)
        // email-i dəyişdirə BİLMƏZ
        && (!('email' in request.resource.data) ||
             request.resource.data.email == resource.data.email);

      // Silmə yalnız admin
      allow delete: if isAdmin();
    }

    // ================================================================
    // LEADS COLLECTION
    // ================================================================
    match /leads/{leadId} {
      allow create: if isAuth()
        && isValidString(request.resource.data.name, 2, 100)
        && isValidEmail(request.resource.data.email)
        && request.resource.data.keys().hasAll(['name','email','createdAt']);

      allow read: if isAdmin();

      // Audit log — heç kəs dəyişdirə bilməz
      allow update, delete: if false;
    }

    // ================================================================
    // LESSONS COLLECTION
    // ================================================================
    match /lessons/{lessonId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ================================================================
    // PROGRESS COLLECTION
    // ================================================================
    match /progress/{progressId} {
      allow read, write: if isAuth()
        && request.auth.uid == resource.data.userId;
      allow read: if isAdmin();
    }

    // ================================================================
    // AI USAGE TRACKING (rate limit per user)
    // ================================================================
    match /ai_usage/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isAdmin();
    }

    // ================================================================
    // REPORTS / FEEDBACK
    // ================================================================
    match /reports/{reportId} {
      allow create: if isAuth()
        && isValidString(request.resource.data.message, 5, 500);
      allow read, update, delete: if isAdmin();
    }

    // ================================================================
    // DEFAULT: Heç bir koleksiyaya icazə yoxdur
    // ================================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
